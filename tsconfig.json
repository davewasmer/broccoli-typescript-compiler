{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "newLine": "LF",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "listFiles": true
  },
  "include": [
    "lib/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/fixtures"
  ]
}
